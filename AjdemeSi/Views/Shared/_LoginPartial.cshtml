@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Index", "Index", "Contacts", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
        <li>@Html.ActionLink("Rides", "Index", "Rides")</li>
        <li>@Html.ActionLink("User Groups", "Index", "UserGroups")</li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" title="@User.Identity.GetUserName()">
                @User.Identity.GetUserName()
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("My Setting", "Index", "Settings")</li>
                <li>@Html.ActionLink("Identity Setting", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li>@Html.ActionLink("logins", "ManageLogins", "Manage", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register Driver", "RegisterDriver", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class= "sign-in-reg-button sign-in-reg-driver-button" })</li>
    </ul>
}
